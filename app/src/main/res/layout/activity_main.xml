<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent" android:layout_height="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">


        <TextView
                android:layout_width="80dp"
                android:layout_height="23dp"
                android:text="Hello World!"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintVertical_bias="0.017" android:id="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/imageView_upper"/>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp" tools:srcCompat="@drawable/ic_launcher_background"
                android:id="@+id/imageView10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background"
                app:srcCompat="@drawable/ic_launcher_background" app:layout_constraintHorizontal_bias="0.0"/>

        <ImageView
                android:layout_width="146dp"
                android:layout_height="147dp" app:srcCompat="@mipmap/ic_launcher_round"
                android:id="@+id/imageView_upper"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView10" app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintBottom_toBottomOf="@+id/imageView10" app:layout_constraintVertical_bias="0.448"/>
        <ImageView
                android:layout_width="57dp"
                android:layout_height="59dp" app:srcCompat="@android:drawable/btn_star_big_on"
                android:id="@+id/imageView3"
                app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginStart="60dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/imageView5"/>
        <ImageView
                android:layout_width="61dp"
                android:layout_height="55dp" app:srcCompat="@android:drawable/ic_menu_add"
                android:id="@+id/imageView5"
                app:layout_constraintStart_toEndOf="@+id/imageView3" android:layout_marginStart="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="@+id/imageView3" app:layout_constraintVertical_bias="1.0"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/imageView6"/>
        <ImageView
                android:layout_width="59dp"
                android:layout_height="62dp" app:srcCompat="@android:drawable/ic_menu_call"
                android:id="@+id/imageView6"
                app:layout_constraintBottom_toBottomOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="@+id/imageView5" app:layout_constraintVertical_bias="0.428"
                app:layout_constraintStart_toEndOf="@+id/imageView5" android:layout_marginStart="16dp"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/imageView7"/>
        <ImageView
                android:layout_width="53dp"
                android:layout_height="60dp" app:srcCompat="?attr/actionModeShareDrawable"
                android:id="@+id/imageView7"
                app:layout_constraintTop_toTopOf="@+id/imageView6"
                app:layout_constraintBottom_toBottomOf="@+id/imageView6" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="60dp" app:layout_constraintVertical_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/imageView6" app:layout_constraintHorizontal_bias="0.5"/>
        <TextView
                android:text="Lives in Yangon"
                android:layout_width="101dp"
                android:layout_height="19dp"
                android:id="@+id/textView5"
                app:layout_constraintStart_toEndOf="@+id/imageView9"
                android:layout_marginStart="8dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView3"/>
        <TextView
                android:text="Studies Computer Science at UCSY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                app:layout_constraintStart_toStartOf="@+id/textView5" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/textView5"/>
        <TextView
                android:text="Studied BEHS 2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7" app:layout_constraintStart_toStartOf="@+id/textView6"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView6"/>
        <TextView
                android:text="Joined since 2014"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8" app:layout_constraintStart_toStartOf="@+id/textView7"
                android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textView7"/>
        <ImageView
                android:layout_width="22dp"
                android:layout_height="18dp" app:srcCompat="@android:drawable/ic_menu_info_details"
                android:id="@+id/imageView9"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" android:layout_marginStart="40dp"/>

        <ImageView
                android:layout_width="22dp"
                android:layout_height="18dp" app:srcCompat="@android:drawable/ic_menu_info_details"
                android:id="@+id/imageView9"
                android:layout_marginTop="48dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="40dp"/>
        <ImageView
                android:layout_width="22dp"
                android:layout_height="18dp" app:srcCompat="@android:drawable/ic_menu_info_details"
                android:id="@+id/imageView9"
                android:layout_marginTop="84dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="40dp"/>
        <ImageView
                android:layout_width="22dp"
                android:layout_height="18dp" app:srcCompat="@android:drawable/ic_menu_info_details"
                android:id="@+id/imageView9"
                android:layout_marginTop="120dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="40dp"/>
        <Button
                android:text="About"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
                android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/textView8"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button2"/>
        <Button
                android:text="Photos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button3"
                app:layout_constraintStart_toEndOf="@+id/button2"
                app:layout_constraintTop_toTopOf="@+id/button2" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/button4"/>
        <Button
                android:text="Posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button2"
                app:layout_constraintStart_toEndOf="@+id/button"
                app:layout_constraintTop_toTopOf="@+id/button" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/button3"/>
        <Button
                android:text="Events"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button4"
                app:layout_constraintStart_toEndOf="@+id/button3"
                app:layout_constraintTop_toTopOf="@+id/button3" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"/>


    </android.support.constraint.ConstraintLayout>
</ScrollView>